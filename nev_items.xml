        একটি sade এসে থাকবে । সুন্দর -->
    <item
        android:id="@+id/profile"
        android:title="Profile"
        android:icon="@drawable/icon_profile_24"
        android:checkable="true"
        />
        <!-- icon গুলো  drawable এ Mouse right
        click >New >Vector Asset > Clip Art & Name Set  -->
    <item
        android:id="@+id/notification"
        android:title="Notification"
        android:icon="@drawable/baseline_circle_notifications_24"
        android:checkable="true"
        />
    </group>




    <group android:checkableBehavior="single">
        <item
            android:id="@+id/setting"
            android:title="Setting"
            android:icon="@drawable/sharp_background_grid_small_24"
            android:checkable="true"
            />
    </group>


